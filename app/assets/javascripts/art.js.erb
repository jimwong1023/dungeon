// Walls and Floors

function RightWall (url) {
	this.texture = new THREE.ImageUtils.loadTexture(url);
	this.texture.wrapS = this.texture.wrapT = THREE.RepeatWrapping;

	this.material = new THREE.MeshBasicMaterial( { map: this.texture, side: THREE.DoubleSide } );
	this.geometry = new THREE.PlaneGeometry( 400, 240, 1, 1 );
	this.mesh = new THREE.Mesh( this.geometry, this.material );

	this.mesh.rotation.y = Math.PI/2;
	this.mesh.position.set(200,120,0);
}

